dnl Process this file with autoconf to produce a configure script.

AC_INIT(configure.in)
AM_INIT_AUTOMAKE(procman, 1.1.0)
AM_CONFIG_HEADER(config.h)

AM_PROG_XML_I18N_TOOLS


dnl Pick up the Gnome macros.
AM_ACLOCAL_INCLUDE(macros)

dnl GNOME_INIT
AC_ISC_POSIX
AC_PROG_CC
AM_PROG_CC_STDC
AC_HEADER_STDC

GNOME_COMPILE_WARNINGS
dnl GNOME_X_CHECKS

LIBGNOME_REQUIRED=1.96.0
LIBGNOMEUI_REQUIRED=1.96.0
GCONF_REQUIRED=1.1.1

PKG_CHECK_MODULES(PROCMAN, libgnome-2.0 >= $LIBGNOME_REQUIRED libgnomeui-2.0 >= $LIBGNOMEUI_REQUIRED gconf-2.0 >= $GCONF_REQUIRED libwnck-1.0 >= 0.1)

AC_SUBST(PROCMAN_CFLAGS)
AC_SUBST(PROCMAN_LIBS)

dnl Check for LibGTop
GNOME_INIT_LIBGTOP(1.0.6, fail)

dnl Add the languages which your application supports here.
ALL_LINGUAS="da ru de es it no pl sv tr uk zh_TW"

AM_GLIB_GNU_GETTEXT

dnl Set PACKAGE_LOCALE_DIR in config.h.
if test "x${prefix}" = "xNONE"; then
  AC_DEFINE_UNQUOTED(PACKAGE_LOCALE_DIR, "${ac_default_prefix}/${DATADIRNAME}/locale")
else
  AC_DEFINE_UNQUOTED(PACKAGE_LOCALE_DIR, "${prefix}/${DATADIRNAME}/locale")
fi

AC_OUTPUT([
Makefile
macros/Makefile
src/Makefile
intl/Makefile
po/Makefile.in
])

